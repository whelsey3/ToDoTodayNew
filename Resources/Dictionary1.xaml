                <Grid Background="#99A8A7A7" >
                    <Border BorderBrush="Gray"  Padding="1" Margin="6" CornerRadius="4" BorderThickness="2,2,4,4"  Width="400">
                        <Grid Name="EditGrid"  Background="AliceBlue"
                          >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="12" />
                            </Grid.RowDefinitions>
                            <!--  ItemsControl will go in the ContentPresenter   -->
                            <ContentPresenter    Grid.Row="0" Grid.ColumnSpan="2"  Margin="0,12,12,0"/>

                            <!-- Validation Errors list -->
                            <ScrollViewer VerticalScrollBarVisibility="Auto"  Grid.Row="1" Grid.ColumnSpan="2" >
                                <ItemsControl ItemsSource="{Binding EditVM.TheEntity.ErrorList}"
                                      Margin="8"  Foreground="Red"
                                      >
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Error}" TextWrapping="Wrap"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
